# Example environment variables for local development and Vercel
# Copy this file to `.env` for local dev, or set variables in Vercel dashboard.

# Firebase
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Supabase (optional - project previously used Supabase storage; not required if using Cloudinary)
VITE_SUPABASE_URL=https://your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_BUCKET=your-supabase-bucket-name

# Cloudinary (used for client-side image uploads)
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_unsigned_upload_preset

# Local dev helper (DO NOT enable in production)
# When true, Firebase app verification is disabled to allow phone auth to work without visible reCAPTCHA. Only use on localhost.
VITE_FIREBASE_DISABLE_APP_VERIFICATION_FOR_TESTING=true

# Optional: default country code for normalizing phone numbers (e.g. +91)
VITE_FIREBASE_DEFAULT_COUNTRY_CODE=+91
